<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level - %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="file-appender" class="ch.qos.logback.core.FileAppender" additivity="true">
        <file>logs/app.log</file>
        <append>false</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level - %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="error-file-appender" class="ch.qos.logback.core.FileAppender" additivity="false">
        <file>logs/error-app.log</file>
        <append>false</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level - %msg%n
            </Pattern>
        </layout>
    </appender>

    <logger name="app-log" level="info" additivity="false">
        <appender-ref ref="file-appender"/>
    </logger>

    <logger name="error-app-log" level="error" additivity="false">
        <appender-ref ref="error-file-appender"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="progress-log" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>